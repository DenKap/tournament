<div class="container">
  <div class="page-header">
    <h1><%=@tourney.name %> tournament Participants</h1>
  </div>
  <div class="row">
    <% if @tourney.participants.present? %>
    <h4>Participants count: <%=@tourney.participants.count %></h4>
      <% @tourney.participants.each_with_index do |participant, i| %>
        <div class="col-md-4">
          <div class="caption">
            <h3><%= (i+1) %></h3>
            <p>Joined to <%=@tourney.name %> tournament at <%=participant.created_at.strftime("%d %B %Y %H:%M") %></p>
            <% if participant.team.logo? %>
              <%= image_tag participant.team.logo.url(:thumb), style: :thumb, class: "rounded-img" %>
            <% else %>
              <%= image_tag 'missing.png', style: 'width:100px; height:100px;', class: "rounded-img" %>
            <% end %>
            <h3><%=participant.team.name %></h3>
            <p>Owner: <%=participant.team.owner %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <h4>There are no Participants yet.</h4>
    <% end %>
  </div>
</div>
